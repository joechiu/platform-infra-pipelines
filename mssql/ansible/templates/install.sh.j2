#!/bin/bash

yum install docker-ce docker-ce-cli containerd.io -y

sudo systemctl enable docker.service
sudo systemctl enable containerd.service
sudo systemctl start docker.service
sudo systemctl start containerd.service

cd /tmp

while [ "" == "$(systemctl status docker.service | grep 'running')" ] 
do 
  echo "docker is not up" >> /tmp/run.out
  sleep 3
done

docker images  >> /tmp/run.out 2>&1

echo "Install docker-compose"
curl -L "https://github.com/docker/compose/releases/download/1.23.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
chmod +x /usr/local/bin/docker-compose
ln /usr/local/bin/docker-compose /usr/bin/

docker run --restart=always -dit --name {{ name }} -e 'ACCEPT_EULA=Y' -e 'SA_PASSWORD=OHQ#Passw0rd' -e 'MSSQL_PID=Developer' -e 'SQLCOLLATION=SQL_Latin1_General_CP1_CI_AS' -p {{ port }} -v {{ volume }} {{ container }} >> /tmp/run.out 2>&1

